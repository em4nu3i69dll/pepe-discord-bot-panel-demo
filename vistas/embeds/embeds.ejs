    <%- include('../parciales/barra-lateral', { pagina: 'embeds', usuario: usuario, servidor: servidor }) %>

    <main class="main-content">
        <header class="main-header glass-card">
            <img src="https://cdn.discordapp.com/icons/<%= servidor.id %>/<%= servidor.icon %>.png" class="server-icon" onerror="this.onerror=null; this.src='https://cdn.discordapp.com/embed/avatars/0.png';">
            <div class="server-header-info">
                <h1><i class="fas fa-paint-brush"></i> Constructor de Embeds</h1>
