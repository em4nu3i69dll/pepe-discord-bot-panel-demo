<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Constructor de Embeds - <%= servidor.name %></title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/comun/sidebar.css">
    <link rel="stylesheet" href="/css/comun/scrollbar.css">
    <link rel="stylesheet" href="/css/embeds/embeds.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <%- include('../parciales/alertas') %>
</head>
<body>
    <div class="background-layer">
        <div class="mosaic-grid">
            <% for (let i = 0; i < 120; i++) { %>
                <div class="mosaic-item"></div>
            <% } %>
        </div>
        <div class="background-overlay"></div>
    </div>

    <%- include('../parciales/barra-lateral', { pagina: 'embeds', usuario: usuario, servidor: servidor }) %>

    <main class="main-content">
        <header class="main-header">
            <% if (servidor.icon) { %>
                <img src="https://cdn.discordapp.com/icons/<%= servidor.id %>/<%= servidor.icon %>.png" class="server-icon" onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                <div class="server-icon-placeholder" style="display: none;">
                    <%= servidor.name.substring(0, 2).toUpperCase() %>
                </div>
            <% } else { %>
                <div class="server-icon-placeholder">
                    <%= servidor.name.substring(0, 2).toUpperCase() %>
                </div>
            <% } %>
            <div class="server-header-info">
                <h1><i class="fas fa-paint-brush"></i> Constructor de Embeds</h1>
                <p>Crea y envía embeds personalizados a tu servidor.</p>
            </div>
        </header>

        <section class="settings-content">
            <div class="contenedor-constructor">
                <div class="contenedor-formulario-embed">
                    <form id="formulario-embed">
                        <div class="grupo-formulario">
                            <label for="canal-id">Canal de destino:</label>
                            <select name="canal_id" id="canal-id" class="campo-entrada seleccionar-canal" required>
                                <option value="" disabled selected>Selecciona un canal...</option>
                                <% canales.forEach(canal => { %>
                                    <option value="<%= canal.id %>"># <%= canal.name %></option>
                                <% }); %>
                            </select>
                        </div>

                        <div class="seccion-formulario">
                            <h3>Contenido Principal</h3>
                            <div class="grupo-formulario">
                                <label for="titulo">Título:</label>
                                <input type="text" name="titulo" id="titulo" class="campo-entrada" maxlength="256" placeholder="Título del embed...">
                            </div>
                            <div class="grupo-formulario">
                                <label for="descripcion">Descripción:</label>
                                <textarea name="descripcion" id="descripcion" class="campo-entrada" maxlength="4096" rows="6" placeholder="Descripción del embed..."></textarea>
                            </div>
                            <div class="grupo-formulario">
                                <label for="color">Color:</label>
                                <input type="color" name="color" id="color" class="campo-entrada" value="#5865F2">
                            </div>
                        </div>

                        <div class="seccion-formulario">
                            <h3>Imágenes</h3>
                            <div class="grupo-formulario">
                                <label for="imagen-url">URL de la imagen principal:</label>
                                <input type="url" name="imagen_url" id="imagen-url" class="campo-entrada" placeholder="https://ejemplo.com/imagen.png">
                            </div>
                            <div class="grupo-formulario">
                                <label for="thumbnail-url">URL de la miniatura:</label>
                                <input type="url" name="thumbnail_url" id="thumbnail-url" class="campo-entrada" placeholder="https://ejemplo.com/miniatura.png">
                            </div>
                        </div>

                        <div class="seccion-formulario">
                            <h3>Pie de página</h3>
                            <div class="grupo-formulario">
                                <label for="footer-texto">Texto del pie:</label>
                                <input type="text" name="footer_texto" id="footer-texto" class="campo-entrada" maxlength="2048" placeholder="Texto del pie de página...">
                            </div>
                        </div>

                        <div class="acciones-formulario">
                            <button type="submit" class="boton boton-primario">Enviar Embed</button>
                            <button type="reset" class="boton boton-secundario">Limpiar Formulario</button>
                        </div>
                    </form>
                </div>
                <div class="contenedor-vista-previa-embed">
                    <h3>Vista Previa</h3>
                    <div class="vista-previa-embed">
                        <div class="embed-discord">
                            <div class="barra-lateral-embed"></div>
                            <div class="contenido-embed">
                                <div class="seccion-titulo"></div>
                                <div class="seccion-descripcion">
                                    <img src="" alt="" class="imagen-miniatura" style="display: none;">
                                </div>
                                <img src="" alt="" class="imagen-principal" style="display: none;">
                                <div class="seccion-pie" style="display: none;">
                                    <span class="texto-pie"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <script src="/js/alertas.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const form = document.getElementById('formulario-embed');
            const preview = document.querySelector('.vista-previa-embed');
            const inputs = form.querySelectorAll('input, textarea, select');
            const servidorId = '<%= servidor.id %>';

            function procesarMarkdownDiscord(texto) {
                if (!texto) return '';
                
                let resultado = texto;
                const codigoPlaceholders = [];
                let placeholderIndex = 0;
                
                resultado = resultado.replace(/```([\s\S]*?)```/g, (match, contenido) => {
                    const placeholder = `__CODIGO_BLOQUE_${placeholderIndex}__`;
                    codigoPlaceholders[placeholderIndex] = `<pre><code>${contenido.replace(/\n/g, '<br>')}</code></pre>`;
                    placeholderIndex++;
                    return placeholder;
                });
                
                resultado = resultado.replace(/`([^`\n]+)`/g, (match, contenido) => {
                    const placeholder = `__CODIGO_INLINE_${placeholderIndex}__`;
                    codigoPlaceholders[placeholderIndex] = `<code>${contenido}</code>`;
                    placeholderIndex++;
                    return placeholder;
                });
                
                resultado = resultado.replace(/\*\*\*([^*]+)\*\*\*/g, '<strong><em>$1</em></strong>');
                resultado = resultado.replace(/___([^_]+)___/g, '<strong><em>$1</em></strong>');
                
                resultado = resultado.replace(/\*\*([^*]+)\*\*/g, '<strong>$1</strong>');
                resultado = resultado.replace(/__([^_]+)__/g, '<strong>$1</strong>');
                
                resultado = resultado.replace(/\*([^*\n]+)\*/g, '<em>$1</em>');
                resultado = resultado.replace(/_([^_\n]+)_/g, '<em>$1</em>');
                
                resultado = resultado.replace(/~~([^~]+)~~/g, '<s>$1</s>');
                
                for (let i = 0; i < placeholderIndex; i++) {
                    resultado = resultado.replace(`__CODIGO_BLOQUE_${i}__`, codigoPlaceholders[i]);
                    resultado = resultado.replace(`__CODIGO_INLINE_${i}__`, codigoPlaceholders[i]);
                }
                
                resultado = resultado.replace(/\n/g, '<br>');
                
                return resultado;
            }

            function actualizarVistaPrevia() {
                if (!preview) {
                    return;
                }

                const tituloInput = document.getElementById('titulo');
                const descripcionInput = document.getElementById('descripcion');
                const colorInput = document.getElementById('color');
                const imagenInput = document.getElementById('imagen-url');
                const thumbnailInput = document.getElementById('thumbnail-url');
                const footerInput = document.getElementById('footer-texto');

                if (!tituloInput || !descripcionInput || !colorInput) {
                    return;
                }

                const datos = {
                    titulo: tituloInput.value || '',
                    descripcion: descripcionInput.value || '',
                    color: colorInput.value || '#5865F2',
                    imagen: imagenInput?.value || '',
                    thumbnail: thumbnailInput?.value || '',
                    footer: footerInput?.value || ''
                };

                const embed = preview.querySelector('.embed-discord');
                if (!embed) {
                    return;
                }

                const contenidoEmbed = embed.querySelector('.contenido-embed');
                if (!contenidoEmbed) {
                    return;
                }

                const sidebar = embed.querySelector('.barra-lateral-embed');
                const titleSection = embed.querySelector('.seccion-titulo');
                const descSection = embed.querySelector('.seccion-descripcion');
                let mainImage = contenidoEmbed.querySelector('.imagen-principal');
                if (!mainImage) {
                    mainImage = document.createElement('img');
                    mainImage.className = 'imagen-principal';
                    mainImage.alt = '';
                    mainImage.style.display = 'none';
                    const pieSection = contenidoEmbed.querySelector('.seccion-pie');
                    if (pieSection) {
                        contenidoEmbed.insertBefore(mainImage, pieSection);
                    } else {
                        contenidoEmbed.appendChild(mainImage);
                    }
                }
                const thumbnail = descSection.querySelector('.imagen-miniatura');
                const footerSection = contenidoEmbed.querySelector('.seccion-pie');
                const footerText = footerSection?.querySelector('.texto-pie');

                if (!sidebar || !titleSection || !descSection) {
                    return;
                }

                sidebar.style.backgroundColor = datos.color;

                if (datos.titulo) {
                    const tituloProcesado = procesarMarkdownDiscord(datos.titulo);
                    titleSection.innerHTML = `<div class="titulo-embed">${tituloProcesado}</div>`;
                    titleSection.style.display = 'block';
                } else {
                    titleSection.style.display = 'none';
                }

                if (datos.descripcion) {
                    const descripcionProcesada = procesarMarkdownDiscord(datos.descripcion);
                    const descripcionDiv = descSection.querySelector('.descripcion-embed') || document.createElement('div');
                    descripcionDiv.className = 'descripcion-embed';
                    descripcionDiv.innerHTML = descripcionProcesada;
                    if (!descSection.querySelector('.descripcion-embed')) {
                        descSection.appendChild(descripcionDiv);
                    }
                    descSection.style.display = 'block';
                    descSection.style.position = 'relative';
                    
                    if (datos.thumbnail) {
                        if (!descSection.querySelector('.imagen-miniatura')) {
                            const thumbImg = document.createElement('img');
                            thumbImg.className = 'imagen-miniatura';
                            descSection.appendChild(thumbImg);
                        }
                        const thumb = descSection.querySelector('.imagen-miniatura');
                        thumb.src = datos.thumbnail;
                        thumb.style.display = 'block';
                        thumb.style.position = 'absolute';
                        thumb.style.right = '0';
                        thumb.style.top = '0';
                        thumb.style.zIndex = '1';
                        thumb.style.maxHeight = '80px';
                        thumb.style.width = '80px';
                        thumb.style.borderRadius = '4px';
                        thumb.onerror = () => { thumb.style.display = 'none'; };
                        descripcionDiv.style.paddingRight = '100px';
                    } else {
                        if (thumbnail) {
                            thumbnail.style.display = 'none';
                        }
                        const descripcionDiv = descSection.querySelector('.descripcion-embed');
                        if (descripcionDiv) {
                            descripcionDiv.style.paddingRight = '0';
                        }
                    }
                } else {
                    descSection.style.display = 'none';
                    if (thumbnail) thumbnail.style.display = 'none';
                }

                if (datos.imagen && mainImage) {
                    mainImage.src = datos.imagen;
                    mainImage.style.display = 'block';
                    mainImage.style.maxWidth = '100%';
                    mainImage.style.width = '100%';
                    mainImage.style.height = 'auto';
                    mainImage.style.borderRadius = '4px';
                    mainImage.style.marginTop = '0.75rem';
                    mainImage.style.clear = 'both';
                    mainImage.style.position = 'relative';
                    mainImage.style.zIndex = '0';
                    mainImage.onerror = () => { mainImage.style.display = 'none'; };
                } else if (mainImage) {
                    mainImage.style.display = 'none';
                }

                if (datos.footer && footerText) {
                    footerText.textContent = datos.footer;
                    footerSection.style.display = 'flex';
                } else if (footerSection) {
                    footerSection.style.display = 'none';
                }
            }

            inputs.forEach(input => {
                input.addEventListener('input', actualizarVistaPrevia);
                input.addEventListener('change', actualizarVistaPrevia);
            });

            function inicializarVistaPrevia() {
                if (document.getElementById('titulo') && document.querySelector('.vista-previa-embed')) {
                    actualizarVistaPrevia();
                } else {
                    setTimeout(inicializarVistaPrevia, 100);
                }
            }

            inicializarVistaPrevia();

            form.querySelector('button[type="reset"]').addEventListener('click', (e) => {
                e.preventDefault();
                form.reset();
                document.getElementById('color').value = '#5865F2';
                actualizarVistaPrevia();
            });

            form.addEventListener('submit', async (e) => {
                e.preventDefault();
                
                const formData = new FormData(form);
                const datosEmbed = {
                    titulo: formData.get('titulo') || null,
                    descripcion: formData.get('descripcion') || null,
                    color: formData.get('color') || '#5865F2',
                    imagen: formData.get('imagen_url') || null,
                    thumbnail: formData.get('thumbnail_url') || null,
                    footer: formData.get('footer_texto') || null
                };

                try {
                    const respuesta = await fetch(`/embeds/${servidorId}/enviar`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            canal_id: formData.get('canal_id'),
                            datos_embed: JSON.stringify(datosEmbed)
                        })
                    });

                    const resultado = await respuesta.json();
                    
                    if (resultado.exito) {
                        mostrarAlerta('¡Embed enviado exitosamente!', 'exito');
                        form.reset();
                        document.getElementById('color').value = '#5865F2';
                        actualizarVistaPrevia();
                    } else {
                        mostrarAlerta('Error al enviar el embed: ' + (resultado.error || 'Error desconocido'), 'error');
                    }
                } catch (error) {
                    mostrarAlerta('Error al enviar el embed', 'error');
                }
            });
        });
    </script>
</body>
</html>
