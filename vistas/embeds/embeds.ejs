ðŸ”§ **CaracterÃ­sticas:**
â€¢ Vista previa en tiempo real
â€¢ PersonalizaciÃ³n completa
â€¢ Interfaz intuitiva

Â¡Edita este contenido y ve los cambios al instante! ðŸš€</textarea>
                            </div>
                            <div class="form-group">
                                <label for="color">Color:</label>
                                <input type="color" name="color" id="color" class="input-field" value="#5865F2">
                            </div>
                        </div>

                        <div class="form-section">
                            <h3>ImÃ¡genes</h3>
                            <div class="form-group">
                                <label for="imagen-url">URL de la imagen principal:</label>
                                <input type="url" name="imagen_url" id="imagen-url" class="input-field" placeholder="https://ejemplo.com/imagen.png" value="https://placehold.co/600x300/5865F2/FFFFFF?text=Imagen+Principal+del+Embed">
                            </div>
                            <div class="form-group">
                                <label for="thumbnail-url">URL de la miniatura:</label>
                                <input type="url" name="thumbnail_url" id="thumbnail-url" class="input-field" placeholder="https://ejemplo.com/miniatura.png" value="https://placehold.co/600x300/5865F2/FFFFFF?text=M">
                            </div>
                        </div>

                        <div class="form-section">
                            <h3>Pie de pÃ¡gina</h3>
                            <div class="form-group">
                                <label for="footer-texto">Texto del pie:</label>
                                <input type="text" name="footer_texto" id="footer-texto" class="input-field" maxlength="2048" placeholder="Texto del pie de pÃ¡gina..." value="Constructor de Embeds â€¢ Creado por EM4NU3L69dll">
                            </div>
                        </div>

                        <div class="form-actions">
                            <button type="submit" class="btn btn-primary">Enviar Embed</button>
                            <button type="reset" class="btn btn-secondary">Limpiar Formulario</button>
                        </div>
                    </form>
                </div>
                <div class="embed-preview-container">
                    <h3>Vista Previa</h3>
                    <div class="embed-preview">
                        <div class="discord-embed">
                            <div class="embed-sidebar"></div>
                            <div class="embed-content">
                                <div class="title-section"></div>
                                <div class="description-section"></div>
                                <img src="" alt="" class="main-image" style="display: none;">
                                <div class="footer-section" style="display: none;">
                                    <span class="footer-text"></span>
                                </div>
                            </div>
                            <img src="" alt="" class="thumbnail-image" style="display: none;">
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const form = document.getElementById('embed-form');
            const preview = document.querySelector('.embed-preview');
            const inputs = form.querySelectorAll('input, textarea, select');

            function actualizarVistaPrevia() {
                if (!preview) {
                    console.error('[EMBEDS] No se encontrÃ³ el contenedor de vista previa');
                    return;
                }

                const tituloInput = document.getElementById('titulo');
                const descripcionInput = document.getElementById('descripcion');
                const colorInput = document.getElementById('color');
                const imagenInput = document.getElementById('imagen-url');
                const thumbnailInput = document.getElementById('thumbnail-url');
                const footerInput = document.getElementById('footer-texto');

                if (!tituloInput || !descripcionInput || !colorInput) {
                    console.error('[EMBEDS] No se encontraron todos los inputs necesarios');
                    return;
                }

                const datos = {
                    titulo: tituloInput.value || '',
                    descripcion: descripcionInput.value || '',
                    color: colorInput.value || '#5865F2',
                    imagen: imagenInput?.value || '',
                    thumbnail: thumbnailInput?.value || '',
                    footer: footerInput?.value || ''
                };

                const embed = preview.querySelector('.discord-embed');
                if (!embed) {
                    console.error('[EMBEDS] No se encontrÃ³ el elemento embed');
                    return;
                }

                const sidebar = embed.querySelector('.embed-sidebar');
                const titleSection = embed.querySelector('.title-section');
                const descSection = embed.querySelector('.description-section');
                const mainImage = embed.querySelector('.main-image');
                const thumbnail = embed.querySelector('.thumbnail-image');
                const footerSection = embed.querySelector('.footer-section');
                const footerText = footerSection?.querySelector('.footer-text');

                if (!sidebar || !titleSection || !descSection) {
                    console.error('[EMBEDS] No se encontraron todos los elementos del embed');
                    return;
                }

                sidebar.style.backgroundColor = datos.color;

                if (datos.titulo) {
                    titleSection.innerHTML = `<div class="embed-title">${datos.titulo}</div>`;
                    titleSection.style.display = 'block';
                } else {
                    titleSection.style.display = 'none';
                }

                if (datos.descripcion) {
                    descSection.innerHTML = `<div class="embed-description">${datos.descripcion.replace(/\n/g, '<br>')}</div>`;
                    descSection.style.display = 'block';
                } else {
                    descSection.style.display = 'none';
                }

                if (datos.imagen) {
                    mainImage.src = datos.imagen;
                    mainImage.style.display = 'block';
                } else {
                    mainImage.style.display = 'none';
                }

                if (datos.thumbnail) {
                    thumbnail.src = datos.thumbnail;
                    thumbnail.style.display = 'block';
                } else {
                    thumbnail.style.display = 'none';
                }

                if (datos.footer && footerText) {
                    footerText.textContent = datos.footer;
                    footerSection.style.display = 'flex';
                } else if (footerSection) {
                    footerSection.style.display = 'none';
                }
            }

            inputs.forEach(input => {
                input.addEventListener('input', actualizarVistaPrevia);
                input.addEventListener('change', actualizarVistaPrevia);
            });

            function inicializarVistaPrevia() {
                if (document.getElementById('titulo') && document.querySelector('.embed-preview')) {
                    actualizarVistaPrevia();
                } else {
                    setTimeout(inicializarVistaPrevia, 100);
                }
            }

            inicializarVistaPrevia();

            form.addEventListener('submit', async (e) => {
                e.preventDefault();
                
                const formData = new FormData(form);
                const datosEmbed = {
                    titulo: formData.get('titulo') || null,
                    descripcion: formData.get('descripcion') || null,
                    color: formData.get('color') || '#5865F2',
                    imagen: formData.get('imagen_url') || null,
                    thumbnail: formData.get('thumbnail_url') || null,
                    footer: formData.get('footer_texto') || null
                };

                try {
                    const respuesta = await fetch(`/embeds/<%= servidor.id %>/enviar`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            canal_id: formData.get('canal_id'),
                            datos_embed: JSON.stringify(datosEmbed)
                        })
                    });

                    const resultado = await respuesta.json();
                    
                    if (resultado.exito) {
                        alert('Â¡Embed enviado exitosamente!');
                        form.reset();
                        actualizarVistaPrevia();
                    } else {
                        alert('Error al enviar el embed: ' + (resultado.error || 'Error desconocido'));
                    }
                } catch (error) {
                    console.error('Error:', error);
                    alert('Error al enviar el embed');
                }
            });
        });
    </script>
</body>
</html>

