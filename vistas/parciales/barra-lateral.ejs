<aside class="sidebar">
    <div class="logo-area">
        <div class="logo-icon">
            <i class="fab fa-discord" style="font-size: 2rem; color: #5865F2;"></i>
        </div>
        <div class="logo-copy">
            <span class="logo-text">Pepe</span>
            <span class="logo-sub">Panel de Control</span>
        </div>
    </div>

    <nav class="nav-container">
        <% if (typeof servidor !== 'undefined') { %>
            <div class="nav-section">
                <a href="/bienvenida/<%= servidor.id %>" class="nav-item <%= (typeof pagina !== 'undefined' && pagina === 'bienvenida') ? 'active' : '' %>">
                    <i class="fas fa-door-open"></i> <span>Bienvenidas</span>
                </a>
                <a href="/embeds/<%= servidor.id %>" class="nav-item <%= (typeof pagina !== 'undefined' && pagina === 'embeds') ? 'active' : '' %>">
                    <i class="fas fa-paint-brush"></i> <span>Embeds</span>
                </a>
            </div>
            <div style="margin-top: 1.5rem; border-top: 1px solid rgba(255,255,255,0.1);"></div>
            <a href="/dashboard" class="nav-item" style="margin-top: 0.5rem; color: #ef4444;">
                <i class="fas fa-arrow-left"></i> <span>Volver al Men√∫</span>
            </a>
        <% } else { %>
            <div class="nav-section">
                <a href="/dashboard" class="nav-item <%= (typeof pagina !== 'undefined' && pagina === 'dashboard') ? 'active' : '' %>">
                    <i class="fas fa-home"></i> <span>Inicio</span>
                </a>
            </div>
        <% } %>
    </nav>

    <div class="sidebar-footer">
        <div class="user-info">
            <img src="<%= usuario.avatar ? `https://cdn.discordapp.com/avatars/${usuario.id}/${usuario.avatar}.png` : 'https://cdn.discordapp.com/embed/avatars/0.png' %>" alt="Avatar" class="user-avatar">
            <div class="user-details">
                <span class="user-name"><%= usuario.username %></span>
                <span class="user-discriminator">#<%= usuario.discriminator %></span>
            </div>
        </div>
        <a href="/logout" class="logout-btn">
            <i class="fas fa-sign-out-alt"></i> Salir
        </a>
    </div>
</aside>

